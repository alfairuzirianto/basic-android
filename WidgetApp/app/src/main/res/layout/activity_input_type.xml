<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:id="@+id/main"
    android:stretchColumns="1">

    <TableRow
        android:layout_marginBottom="8dp">
        <TextView
            android:text="Nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="yes"
            android:contentDescription="Label untuk nama"/>

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textFontWeight="1"
            android:importantForAccessibility="yes"
            android:labelFor="@+id/nameEditText"
            android:maxLines="1"
            android:padding="8dp"
            tools:ignore="SpeakableTextPresentCheck"/>
    </TableRow>

    <TableRow
        android:layout_marginBottom="8dp">
        <TextView
            android:text="Umur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="yes"
            android:contentDescription="Label untuk umur"/>

        <EditText
            android:id="@+id/ageEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:importantForAccessibility="yes"
            android:inputType="number"
            android:labelFor="@+id/ageEditText"
            android:maxLines="1"
            android:padding="8dp"
            tools:ignore="SpeakableTextPresentCheck, TouchTargetSizeCheck"/>
    </TableRow>

    <TableRow
        android:layout_marginBottom="8dp">
        <TextView
            android:text="Tangal Lahir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="yes"
            android:contentDescription="Label untuk tanggal lahir"/>

        <EditText
            android:id="@+id/birthDateEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:importantForAccessibility="yes"
            android:inputType="date"
            android:labelFor="@+id/birthDateEditText"
            android:maxLines="1"
            android:padding="8dp"
            tools:ignore="SpeakableTextPresentCheck, TouchTargetSizeCheck"/>
    </TableRow>

    <TableRow
        android:layout_marginBottom="8dp">
        <TextView
            android:text="Alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="yes"
            android:contentDescription="Label untuk alamat"/>

        <EditText
            android:id="@+id/addressEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:importantForAccessibility="yes"
            android:inputType="textMultiLine"
            android:labelFor="@+id/addressEditText"
            android:maxLines="5"
            android:minLines="3"
            android:padding="8dp"
            tools:ignore="SpeakableTextPresentCheck" />
    </TableRow>

    <TableRow
        android:layout_marginTop="16dp">
        <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:onClick="onSubmit"
            android:layout_span="2"
            android:importantForAccessibility="yes"/>
    </TableRow>

</TableLayout>